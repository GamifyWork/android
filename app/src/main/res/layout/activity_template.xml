<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="16dp"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:paddingTop="16dp"
tools:context="com.example.user.gamifywork.TemplateActivity">

<TextView
    android:id="@+id/textView6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:text="Auftragsmaske erstellen"
    android:textColor="@android:color/black"
    android:textSize="18sp" />

<EditText
    android:id="@+id/editTexttemplname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="Titel"
    android:inputType="textPersonName"
    android:lines="1"
    android:maxLines="1"
    android:paddingBottom="16dp"
    android:singleLine="true" />

<EditText
    android:id="@+id/editTexttemplcont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="Beschreibung"
    android:inputType="textPersonName"
    android:lines="3"
    android:maxLines="3"
    android:minLines="3"
    android:paddingBottom="16dp" />

<EditText
    android:id="@+id/editTexttemplcoins"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="Coinanzahl"
    android:inputType="textPersonName"
    android:lines="1"
    android:maxLines="1"
    android:paddingBottom="16dp"
    android:singleLine="true" />

<Button
    android:id="@+id/buttontemplsend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="Erstellen" />
</LinearLayout>
